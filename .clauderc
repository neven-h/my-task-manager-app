{
  "projectName": "My Task Manager App",
  "description": "Full-stack task management application with Flask backend and React frontend",
  "context": {
    "backend": {
      "path": "backend",
      "language": "python",
      "framework": "flask",
      "virtualenv": "backend/venv"
    },
    "frontend": {
      "path": "frontend",
      "language": "javascript",
      "framework": "react",
      "packageManager": "npm"
    }
  },
  "ignore": [
    "node_modules",
    "venv",
    "__pycache__",
    "*.pyc",
    ".git",
    "dist",
    "build"
  ]
}
