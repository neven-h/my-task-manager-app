# Backend Environment Variables (for Railway)
# These will be set in Railway dashboard, not committed to git

# Security Configuration (REQUIRED)
# Generate secure random strings for these (use: python -c "import secrets; print(secrets.token_urlsafe(32))")
SECRET_KEY=your-secret-key-min-32-chars-CHANGE-THIS
JWT_SECRET_KEY=your-jwt-secret-key-min-32-chars-CHANGE-THIS

# Data Encryption Key (CRITICAL - REQUIRED for bank transaction encryption)
# Generate using: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
# ⚠️ WARNING: Backup this key securely! If lost, encrypted data cannot be recovered!
DATA_ENCRYPTION_KEY=generate-using-command-above-44-chars

# Migration Password (for one-time data encryption migration)
# Only needed once to encrypt existing plaintext transactions
MIGRATION_PASSWORD=your-secure-migration-password-here

# User Passwords (REQUIRED)
USER_PITZ_PASSWORD=your-secure-password-here
USER_HILLEL_PASSWORD=your-secure-password-here
USER_OLIVIA_PASSWORD=your-secure-password-here

# Database Configuration (Railway provides these automatically when you add MySQL)
DB_HOST=your-mysql-host.railway.app
DB_USER=root
DB_PASSWORD=your-password
DB_NAME=task_tracker
DB_PORT=3306

# Frontend URL (for CORS)
FRONTEND_URL=https://drpitz.club

# Flask Configuration
FLASK_ENV=production
DEBUG=false

# Email Configuration (for password reset)
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password
MAIL_DEFAULT_SENDER=your-email@gmail.com
