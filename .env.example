# Backend Environment Variables
# Copy this file to .env and fill in the values
# NEVER commit .env to git

# Security Configuration (REQUIRED)
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=
JWT_SECRET_KEY=

# Data Encryption Key (CRITICAL - required for bank transaction encryption)
# Generate with: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
# ⚠️ WARNING: Back this up securely. If lost, encrypted data cannot be recovered.
DATA_ENCRYPTION_KEY=

# Migration Password (only needed once to encrypt existing plaintext transactions)
MIGRATION_PASSWORD=

# User Passwords (REQUIRED)
USER_PITZ_PASSWORD=

# Database Configuration
DB_HOST=localhost
DB_USER=root
DB_PASSWORD=
DB_NAME=task_tracker
DB_PORT=3306
DB_POOL_SIZE=5

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:3000

# Flask Configuration
FLASK_ENV=development
DEBUG=true

# Email Configuration (for password reset — optional in dev)
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_DEFAULT_SENDER=

# Cloudinary (for image uploads — optional)
# CLOUDINARY_URL=cloudinary://api_key:api_secret@cloud_name
CLOUDINARY_URL=
